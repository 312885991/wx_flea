<!--pages/goods/goods.wxml-->
<view class="container">
<view class="search">
    <van-search
    value="{{ search }}"
    placeholder="请输入搜索关键词"
    use-action-slot
    bind:search="onSearch"
    shape="round"
    class="search"
    bind:change="search"
    >
      <view slot="action" bind:tap="onSearch">搜索</view>
    </van-search>
  </view>
  <view class="goods">
    <scroll-view scroll-y style="height: 100%;width: 25%;">
    <view class="left">
      <van-sidebar  bind:change="onChange" bind:click="onClick" active="{{ active }}"> 
        <block wx:for="{{typeArrays}}" wx:key="key">
          <van-sidebar-item title="{{item.name}}" />
        </block>
      </van-sidebar>
    </view>
  </scroll-view>
  
    <scroll-view scroll-y bindscrolltolower="loadMore" style="height:100%;width: 75%">
    <view class="right">
      <view wx:for="{{goods}}" wx:key="key">
      <view bindtap="info" id="{{item.id}}">
        <van-card
          centered="true"
          tag="{{item.tag}}"
          origin-price="{{item.oldPrice}}"
          price="{{item.currentPrice}}"
          title="{{item.name}}"
          thumb="{{item.imageUrl}}"
          lazy-load="true"
        >
        <view slot="tags">
          <van-tag type="success" style="padding-right:10rpx;">{{item.sortC}}</van-tag>
          <van-tag type="warning">{{item.school}}</van-tag>
        </view>
        </van-card>
        <van-divider />
      </view>
      </view>
      <block wx:if="{{goods.length == 0}}">
        <view class="weui-loadmore weui-loadmore_line">
              <view class="weui-loadmore__tips weui-loadmore__tips_in-line">暂无更多数据</view>
        </view>
      </block>
    </view>
  </scroll-view>
  </view>
</view> 