/* pages/mine/about/about.wxss */
.head{
  padding: 60rpx 0 60rpx 0;
  background-color: white;
  margin: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center; 
  flex-direction: column;
  position: relative;
  border-radius: 15rpx;
}
.cu-avatar{
  height: 100%;
  width: 100%;
}

.title{
  padding-top: 20rpx;
  font-size: 40rpx;
  color: #0EB672;
  font-weight: bold;
}
.version{
  position: absolute;
  top: 20rpx;
  right: 15rpx;
  border: 1px solid #0EB672;
  padding: 0 10rpx 0 10rpx;
  border-radius: 8rpx;
}

.version-number{
  position: absolute;
  top: 20rpx;
  right: 130rpx;
  border: 1px solid #0EB672;
  padding: 0 10rpx 0 10rpx;
  border-radius: 8rpx;
}

.version text{
  color: #0EB672
}

.version-number text{
  color: #0EB672
}

.body{
  padding: 0rpx 0px 15rpx 0;
  background-color: white;
  margin: 20rpx;
  border-radius: 15rpx;
}

.body .title{
  margin-left: 30rpx;
}

.body .info{
  margin-top: 10rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-bottom: 5rpx;
}

.body .title text{
  font-size: 36rpx;
  /* font-weight: blod; */
  color: #00B26A
}

.body .info text{
  font-size: 34rpx;
  font-weight: blod;
  color: #9D9D9D;
}

.contact{
  background-color: white;
  margin: 20rpx;
  border-radius: 15rpx;
  padding-bottom: 15rpx;
}
.contact .title{
  margin-left: 30rpx;
}

.contact .title text{
  color: #00B26A;
  font-size: 36rpx;
  /* font-weight: blod; */
}

.comment{
  display: flex;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.comment .left{
  margin-left: 30rpx;
  width: 4rpx;
  height: 280rpx;
  background-color: #9D9D9D;
}

.comment .right{
  margin-top: 10rpx;
  margin-left: 20rpx;
  margin-right: 5rpx;
  width: 100%;
  height: 100%;
}
.comment .info{
  margin-bottom: 6rpx;
}

.info .message{
  color: #0EB672;
  font-size: 32rpx;
  text-decoration: underline;
}
.info .name{
  color: #9D9D9D;
  font-size: 32rpx;
}
.foot{
  margin: 20rpx;
  text-align: center;
}
.foot text{
  color: #9D9D9D;
  font-size: 28rpx;
}
