.userinfo {
    display: flex;
    align-items: center;
    border: 2rpx #F7F7F7 solid;
    background-color: white;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
    height: 200rpx;
  }
  .userinfo-other{
    flex: 5.7;
    display: flex;
    flex-flow: column;
    padding-left: 50rpx;
    font-size: 30rpx;
  }
  .avatar{
    height: 128rpx;
    width: 128rpx;
    margin-left: 50rpx;
  }
  .userinfo-nickname {
    color: #aaa;
    margin-bottom: 15rpx;
  }
  .userinfo-school{
    color: #aaa;
  }
  .navigator-list{
    border: 2rpx #F7F7F7 solid;
    margin-bottom: 10rpx;
  }
  .arrow{
    padding-right: 38rpx;
  }
  .comment{
    position:relative;
  }

  .comment text{
    position:absolute;
    right:12vw;
    top:30rpx;
    color:white;
    width: 36rpx;
    line-height: 36rpx;
    text-align: center;
    border-radius: 50%;
    background-color: red;
    font-size: 26rpx;
  }

  .footer{
    position: relative;
  }
  
  .footer .btn{
    width: 100%;
    height: 48px;
    background-color: transparent;
    z-index:999;
  }

  .footer .btn::after{
    border: none;
  }

  .footer .contact{
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
  }